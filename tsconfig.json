{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strict": true,

        // "composite": true,
        "incremental": true,
        // "extendedDiagnostics": true,
        "inlineSources": true,
        "lib": ["ES6", "DOM"],
        "pretty": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "tsBuildInfoFile": ".tsbuildinfo",
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules/"]
}